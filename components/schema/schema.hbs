<section {{#if $id}}id={{$id}}{{/if}} class=jschemer-schema>

  <details open>

    {{!-- Meta --}}

    {{#if title}}
      <summary>
        <h1 class='title prop'>{{md title 'inline'}}</h1>
      </summary>
    {{/if}}

    {{#if $schema}}
      <p class='$schema prop'><b>Validate against:</b> <a href='{{$schema}}'>{{$schema}}</a></p>
    {{/if}}

    {{#if $id}}
      <p class='$id prop'><b>Schema ID:</b> <code>{{$id}}</code></p>
    {{/if}}

    {{#if type}}
      <p class='type prop'><b>Type:</b> <code>{{type}}</code></p>
    {{/if}}

    {{#if $comment}}
      <div class='$comment prop'>
        <h2>Developer Notes</h2>
        <div>{{md $comment}}</div>
      </div>
    {{/if}}

    {{#if $ref}}
      <div class='$ref prop'>
        <p>This item must validate against the following schema:</p>
        <p><a href='{{$ref}}'>{{$ref}}</a></p>
      </div>
    {{/if}}

    {{!-- Any --}}

    {{#if const}}
      <p>This item must have the following value:</p>
      <code><pre>{{json const}}</pre></code>
    {{/if}}

    {{#if enum}}
      <div class='enum prop'>
        <h2>Allowed Values</h2>
        <ul>
          {{#each enum}}
            <li><pre>{{json this}}</pre></li>
          {{/each}}
        </ul>
      </div>
    {{/if}}

    {{!-- Numeric --}}

    {{#if minimum}}
      <p class='minimum prop'>
        <b>Minimum:</b> <code>{{json minimum}}</code>
      </p>
    {{/if}}

    {{#if exclusiveMinimum}}
      <p class='exclusiveMinimum prop'>
        <b>Exclusive minimum:</b> <code>{{json exclusiveMinimum}}</code>
      </p>
    {{/if}}

    {{#if maximum}}
      <p class='maximum prop'>
        <b>Maximum:</b> <code>{{json maximum}}</code>
      </p>
    {{/if}}

    {{#if exclusiveMaximum}}
      <p class='exclusiveMaximum prop'>
        <b>Exclusive maximum:</b> <code>{{json exclusiveMaximum}}</code>
      </p>
    {{/if}}

    {{#if multipleOf}}
      <p class='multipleOf prop'>
        <b>Multiple of:</b> <code>{{json multipleOf}}</code>
      </p>
    {{/if}}

  </details>

</section>
