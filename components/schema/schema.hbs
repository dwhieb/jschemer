<section {{#if $id}}id={{$id}}{{/if}} class=jschemer-schema>

  <details open>

    {{#if title}}
      <summary>
        <h1 class='title prop'>{{md title 'inline'}}</h1>
      </summary>
    {{/if}}

    {{#if $schema}}
      <p class='$schema prop'><b>Validate against (<code>$schema</code>):</b> <a href='{{$schema}}'>{{$schema}}</a></p>
    {{/if}}

    {{#if $id}}
      <p class='$id prop'><b>Schema ID (<code>$id</code>):</b> <code>{{$id}}</code></p>
    {{/if}}

    {{#if $comment}}
      <div class='$comment prop'>
        <h2>Developer Notes (<code>$comment</code>)</h2>
        <div>{{md $comment}}</div>
      </div>
    {{/if}}

    {{#if $ref}}
      <div class='$ref prop'>
        <p>Must be an instance of the following schema:</p>
        <p><a href='{{$ref}}'>{{$ref}}</a></p>
      </div>
    {{/if}}

  </details>

</section>
